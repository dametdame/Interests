<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef>
    <defName>DAllergicReaction</defName>
    <label>allergic reaction</label>
    <description>A disruptive reaction caused by working in a certain environment, or with materials and subjects to which the victim is allergic. Symptoms worsen with continued exposure, but quickly recede in the absence of allergens.</description>
    <defaultLabelColor>(0.35, 0.8, 0.35)</defaultLabelColor>
    <stages>
      <li>
        <label>initial</label>
        <becomeVisible>false</becomeVisible>
      </li>
      <li>
        <label>itching</label>
        <minSeverity>0.05</minSeverity>
      </li>
      <li>
        <label>sneezing</label>
        <minSeverity>0.20</minSeverity>
        <capMods>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.10</offset>
          </li>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>swelling</label>
        <minSeverity>0.45</minSeverity>
		<opinionOfOthersFactor>0.8</opinionOfOthersFactor>
        <painOffset>0.05</painOffset>
        <capMods>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.15</offset>
          </li>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.25</offset>
          </li>
		  <li>
            <capacity>Sight</capacity>
            <offset>-0.20</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>anaphylaxis</label>
        <minSeverity>0.70</minSeverity>
		<opinionOfOthersFactor>0.6</opinionOfOthersFactor>
		<vomitMtbDays>3.0</vomitMtbDays>
        <painOffset>0.15</painOffset>
		<capMods>
		  <li>
			<capacity>Breathing</capacity>
			<offset>-0.50</offset>
		  </li>
		  <li>
			<capacity>Talking</capacity>
			<offset>-0.50</offset>
		  </li>
		  <li>
			<capacity>Sight</capacity>
			<offset>-0.30</offset>
		  </li>
		</capMods>
      </li>
    </stages>
  </HediffDef>

</Defs>